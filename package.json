{
  "name": "expo-plugin-app-name-localization",
  "version": "0.1.1",
  "description": "Expo config plugin to add localized app names for iOS and Android",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "clean": "rm -rf lib",
    "prepare": "npm run clean && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md,yml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md,yml}\""
  },
  "keywords": [
    "expo",
    "expo-plugin",
    "expo-config-plugin",
    "localization",
    "app-name",
    "ios",
    "android",
    "react-native",
    "i18n"
  ],
  "author": "Taeho Kim <taeho@taeho.io>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xissy/expo-plugin-app-name-localization.git"
  },
  "bugs": {
    "url": "https://github.com/xissy/expo-plugin-app-name-localization/issues"
  },
  "homepage": "https://github.com/xissy/expo-plugin-app-name-localization#readme",
  "files": [
    "lib",
    "README.md",
    "LICENSE"
  ],
  "peerDependencies": {
    "@expo/config-plugins": ">=5.0.0",
    "expo": ">=47.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@expo/config-plugins": "^10.1.1",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "eslint": "^9.30.1",
    "expo": "^53.0.0",
    "fs-extra": "^11.2.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.8.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
